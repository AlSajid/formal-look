<div class="intro-slider-container mb-4">
  <div
    class="intro-slider owl-carousel owl-simple owl-nav-inside"
    data-toggle="owl"
    data-owl-options='
      {
          "nav": false,
          "dots": true,
          "responsive": {
              "992": {
                  "nav": true,
                  "dots": false
              }
          }
      }
    '
  >
    {% for block in section.blocks %}
      <div class="intro-slide" style="background-image: url({{ block.settings.slide_image | image_url }});">
        <div class="container intro-content">
          {% if block.settings.slide_subtitle %}
            <h3 class="intro-subtitle text-primary">{{ block.settings.slide_subtitle }}</h3>
          {% endif %}

          {% if block.settings.slide_title %}
            <h1 class="intro-title">
              {{ block.settings.slide_title | escape | newline_to_br }}
            </h1>
          {% endif %}

          {% if block.settings.button_text != blank %}
            <a href="{{ block.settings.button_link }}" class="btn btn-outline-primary-2">
              <span>{{ block.settings.button_text }}</span>
              <i class="icon-long-arrow-right"></i>
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <span class="slider-loader"></span>
</div>

{% schema %}
{
  "blocks": [
    {
      "name": "t:general.slider.slide",
      "type": "hero_slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "t:options.text_style.title",
          "default": "Get All\n The Good Stuff"
        },
        {
          "type": "text",
          "id": "slide_subtitle",
          "label": "t:options.text_style.subtitle",
          "default": "Seasonal Picks"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "t:labels.button_text",
          "default": "Discover More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:labels.button_link",
          "default": "/collections/all"
        }
      ]
    }
  ]
}
{% endschema %}
